{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2023"],
    "module": "node16",
    "target": "es2022",
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/node"],
    "plugins": [
      { "transform": "./src/lib/api-transformer.ts", "type": "raw" },
      { "transform": "typia/lib/transform" }
    ]
  },
  "include": ["src/**/*.api.ts", "src/**/*.ts", "tests/**/*.ts"]
}
